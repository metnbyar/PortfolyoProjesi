@model List<Steller_Portfolio.Models.TblTestimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<h2>Referans Listesi </h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>Ünvan</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.NameSurname </td>
            <td>@item.Title </td>
            <td>@item.Description </td>
            <td>@item.ImageUrl </td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-info">Güncelle</a></td>

        </tr>
    }
</table>

<br />
<a href="/Testimonial/AddTestimonial" class="btn btn-outline-primary">Yeni Referans Ekle </a>