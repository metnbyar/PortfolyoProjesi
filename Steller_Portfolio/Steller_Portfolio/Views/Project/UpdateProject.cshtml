@model Steller_Portfolio.Models.TblProject
@{
    ViewBag.Title = "UpdateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Proje Güncelleme Sayfası</h2>


<form method="post">
    @Html.HiddenFor(x => x.ProjectId)
    <label>Resim URL</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Proje Adı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>GitHub Linki</label>
    @Html.TextBoxFor(x => x.GitHubUrl, new { @class = "form-control" })

    <button class="btn btn-outline-primary">Güncelle</button>

</form>
